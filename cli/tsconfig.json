{
	"compilerOptions": {
		"target": "es2020",
		"module": "ESNext",
		"lib": [
			"es2020"
		],
		"declaration": true,
		"outDir": "./dist",
		"strict": false,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"../src/*"
			],
			"@shared/*": [
				"../src/shared/*"
			],
			"@core/*": [
				"../src/core/*"
			],
			"@hosts/*": [
				"../src/hosts/*"
			],
			"@integrations/*": [
				"../src/integrations/*"
			],
			"@services/*": [
				"../src/services/*"
			],
			"@utils/*": [
				"../src/utils/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/core/CliTaskManager.ts",
		"src/providers/CliWebviewProvider.ts",
		"src/providers/CliDiffViewProvider.ts"
	],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
